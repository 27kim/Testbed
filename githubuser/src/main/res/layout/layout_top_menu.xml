<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/temp_Salmon"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            >

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/menu_1"
                style="@style/LayoutMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내 정보"
                app:drawableTopCompat="@android:drawable/btn_star_big_on"
                android:drawablePadding="5dp"
                app:layout_constraintEnd_toStartOf="@id/menu_2"
                app:layout_constraintStart_toStartOf="parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/menu_2"
                style="@style/LayoutMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이벤트"
                app:drawableTopCompat="@android:drawable/btn_star_big_off"
                android:drawablePadding="5dp"
                app:layout_constraintEnd_toStartOf="@id/menu_3"
                app:layout_constraintStart_toEndOf="@id/menu_1" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/menu_3"
                style="@style/LayoutMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="고객센터"
                app:drawableTopCompat="@android:drawable/btn_star_big_on"
                android:drawablePadding="5dp"
                app:layout_constraintEnd_toStartOf="@id/menu_4"
                app:layout_constraintStart_toEndOf="@id/menu_2" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/menu_4"
                style="@style/LayoutMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="공지사항"
                app:drawableTopCompat="@android:drawable/btn_star_big_off"
                android:drawablePadding="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/menu_3" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>