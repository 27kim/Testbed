<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_host"
    app:startDestination="@id/remoteFragment">

    <fragment
        android:id="@+id/remoteFragment"
        android:name="io.lab27.githubuser.ui.RemoteFragment"
        android:label="RemoteFragment"
        tools:layout="@layout/fragment_remote">

        <action
            android:id="@+id/action_webview"
            app:destination="@id/webViewFragment">
        </action>
    </fragment>

    <fragment
        android:id="@+id/webViewFragment"
        android:name="io.lab27.githubuser.ui.WebViewFragment"
        android:label="WebViewFragment">

        <argument
            android:name="newsUrl"
            app:argType="string"
            android:defaultValue="url" />
    </fragment>
</navigation>